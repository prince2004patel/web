extends base.pug

block scripts 
  //-script(src="/static/index.js")

block style 
     style
       include ../static/styleMain.css
       include ../static/styleContact.css

block content 
    nav#navbar
      ul
          #logo 
              img(src="/static/img/logo.png")
              | NDA
          li #[a(href="/") Home]  
          li #[a(href="/about") About] 
          li #[a(href="#") Services] 
          li #[a(href="#") Class Info]  
          li #[a(href="/contact") Contact Us]

    .container 
       h1 Contact us 
       form(action="/contact",method="post",Class="myForm") 
          input(type="text",Class="myInput",id="name",name="name",placeholder="Enter your name")
          input(type="phone",Class="myInput",id="phone",name="phone",placeholder="Enter your phone number")
          input(type="age",Class="myInput",id="age",name="age",placeholder="Enter your age")
          input(type="text",Class="myInput",id="gender",name="gender",placeholder="Enter your gender")
          textarea.myInput#address(name='address',cols='30',rows='10',placeholder='Enter your address')
          button(id="btn")
            | submit
