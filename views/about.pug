    section#missionSection
        h2 Our Mission   
        .card 
           h3 Dance perfection
           .card-box 
               .card-img 
                   img(src="/static/img/1.png")
               .card-content 
                   p this is the best dance academy of the universe
        .card 
           h3 Dance the way you like
           .card-box 
               .card-img 
                   img(src="/static/img/4.png")
               .card-content 
                   p this is the best dance academy of the universe
        .card 
           h3 Expert teaching
           .card-box 
               .card-img 
                   img(src="/static/img/3.png")
               .card-content 
                   p this is the best dance academy of the universe
    
    section#sponsorsSection
        h2 Our Sponsors   
        #sponsors 
            img(src="/static/img/logo1.png",alt="sponsor image",Class="spIamge")
            img(src="/static/img/logo2.png",alt="sponsor image",Class="spIamge")
            img(src="/static/img/logo3.png",alt="sponsor image",Class="spIamge")
            img(src="/static/img/logo4.png",alt="sponsor image",Class="spIamge")


