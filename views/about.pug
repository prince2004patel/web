block content
    nav#navbar
      ul
          #logo 
              img(src="/static/img/logo.png")
              | NDA
          li #[a(href="/") Home]  
          li #[a(href="/about") About] 
          li #[a(href="#") Services] 
          li #[a(href="#") Class Info]  
